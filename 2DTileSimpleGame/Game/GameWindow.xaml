<Window x:Class="_2DTileSimpleGame.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2DTileSimpleGame"
        mc:Ignorable="d"
        Title="2D Tile Game" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Topmost="False" WindowState="Normal" WindowStartupLocation="CenterScreen">
    <Border BorderBrush="Black" BorderThickness="5">
        <Canvas Name="GameCanvas" Background="SaddleBrown" Focusable="True"
   VerticalAlignment="Top" HorizontalAlignment="Center" >
        </Canvas>
    </Border>
</Window>
